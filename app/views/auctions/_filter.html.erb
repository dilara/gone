<%= form_tag :auctions, method: :get do %>
  <div class="form-group">
    <div class="card">
  	  <article class="card-group-item">
	  	  <header class="card-header">
		  	  <h6 class="title">Price </h6>
		    </header>
  		  <div class="filter-content">
	  		  <div class="card-body">
  	  		  <div class="form-row">
	  	  	    <div class="form-group col-md-6">
		  	        <label>Minimum</label>
					  		<%= text_field_tag :min_price, params[:min_price], placeholder: '0 TL', class: 'form-control' %>
			        </div>
  			      <div class="form-group col-md-6 text-right">
	  		        <label>Maximum</label>
					  		<%= text_field_tag :max_price, params[:max_price], placeholder: '0 TL', class: 'form-control' %>
			        </div>
			      </div>
  			  </div>
	  	  </div>
	    </article>
    </div>
  </div>

  <%= submit_tag 'Filter', class: 'btn btn-block btn-primary' %>
<% end %>
