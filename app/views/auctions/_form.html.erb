<%= simple_form_for(@auction) do |f| %>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <div class="row">
        <div class="col-md-12">
          <%= f.input :name, include_blank: false %>
          <%= f.input :description, include_blank: false %>
          <%= f.input :base_price, include_blank: false %>
          <%= f.input :starts_at, include_blank: false %>
          <%= f.input :expires_at, include_blank: false %>
        </div>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Back', auctions_path, class: 'btn btn-default' %>
  </div>
<% end %>
