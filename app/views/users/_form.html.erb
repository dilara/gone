
<%= simple_form_for(@user) do |f| %>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <div class="row">
        <div class="col-md-12">
          <%= f.input :first_name, include_blank: false %>
          <%= f.input :last_name, include_blank: false %>
          <%= f.input :email, include_blank: false %>
          <%= f.input :status, collection: User.statuses.keys, include_blank: false %>
          <%= f.input :role, collection: User.roles.keys, include_blank: false %>
        </div>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Back', users_path, class: 'btn btn-default' %>
  </div>
<% end %>
