<% content_for :head do %>
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark">Users</h1>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Users</h3>
    <div class="card-tools">
      <%= link_to 'New User', new_user_path, class: "btn btn-tool btn-success" %>
    </div>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <thead>
        <tr>
          <th>Name</th>
          <th style="width: 20%">Role</th>
          <th style="width: 20%">Status</th>
          <th style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <a><%= "#{user.first_name} #{user.last_name}" %></a>
            </td>
            <td>
              <span class="badge badge-success"><%= user.role %></span>
            </td>
            <td>
              <span class="badge badge-success"><%= user.status %></span>
            </td>
            <td class="project-actions text-right">
              <%= link_to 'Show', user, class: "btn btn-primary btn-sm" %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info btn-sm" %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
